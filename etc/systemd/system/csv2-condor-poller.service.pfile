[Unit]
Description=Queries htcondor for job and machine data and executes condor commands
After=network.target

[Service]
Type=simple
User=condor
ExecStart=/opt/cloudscheduler/python3/bin/python3 /opt/cloudscheduler/data_collectors/condor/condor_poller_na.py /opt/cloudscheduler/etc/cloudscheduler/condor_poller.yaml
Restart=always

[Install]
WantedBy=multi-user.target
